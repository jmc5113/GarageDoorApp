<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="io.particle.cloudsdk.example_app.ValueActivity">

    <TextView
        android:id="@+id/percentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="0"
        android:textSize="28sp" />

    <Button
        android:id="@+id/refresh_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/percentText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:text="Refresh" />

    <Button
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/refresh_button"
        android:layout_alignStart="@+id/refresh_button"
        android:layout_marginStart="1dp"
        android:layout_marginTop="13dp"
        android:text="Open" />

    <TextView
        android:id="@+id/doorStatus"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/refresh_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="233dp"
        android:text="door_status"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

</RelativeLayout>
